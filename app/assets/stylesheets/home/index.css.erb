.section_main {
    background-image: url('<%= asset_path('bg/bg_gray.png') %>');
    background-repeat: no-repeat;
}

.main_line {
    margin-top: 450px;
    position: absolute;
}

.link_gray {
    color: #676767;
    text-decoration: none;
}

.font-typed {
    color: #FF4848;
    font-family: 'nexon_lv1_gothic';
    font-weight: bold;
}

.font-subpage-subtitle {
    font-family: 'Nanum Gothic';
    margin-top: 50px;
}

.weight_black {
    font-weight: bold;
    color: black;
}

.space-left {
    margin-left: 20px;
}

.section-ex-product_img {
    text-align: center;
    line-height: 100px;
}

.prd_img {
    min-width: 70px;
    max-width: 70px;
    min-height: 70px;
    max-height: 70px;
    margin-left: 10px;
    box-shadow: 2px 2px 1px rgba(0, 0, 0, 0.35);
    border: 5px solid white;
    border-radius: 5px;
}

.prd_time { color: gray; }
.prd_info { margin-left: 5px; }
.prd_center { align-items: center; }

.prd_black {
    color: black;
    font-size: 15px;
    font-family: 'Nanum Gothic';
}

@media only screen and (max-width: 1250px) {
    .button-size {
        width: 170px;
        height: 50px;
    }
    
    .button-size_footer {
        width: 150px;
        height: 30px;
    }
    
    .main-smartphone {
        margin-top: 50px;
        width: 70%;
        height: auto;
    }
    
    .text-center-mobile {
        text-align: center;
    }
    
    .justify-center-mobile {
        justify-content: center;
    }
    
    .font-main {
        font-family: 'nexon_lv1_gothic';
        color: black;
        font-size: 30px;
    }
    
    <% for i in 1..3 %>
    .sale-text-<%=i%> {
        position: absolute;
        left: <%= 30 + (300*0.1*i) %>px;
        bottom: <%= 150 + (300*0.1*i) %>px;
        font-size: <%= 10 + (50*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
        z-index: 100;
    }
    <% end %>
    
    <% for i in 1..3 %>
    .alarm-text-<%=i%> {
        position: absolute;
        left: <%= 180 + (200*0.1*i) %>px;
        bottom: <%= 170 + (250*0.1*i) %>px;
        font-size: <%= 10 + (30*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
    }
    <% end %>
    
    .catch-hand-sale {
        background-image: url("<%= asset_path('img/catch_hand_sale.png') %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: right bottom;
        width: 100%;
        min-height: 300px;
        position: absolute;
        z-index: -1;
        bottom: 0px;
        right: 0px;
        display: block;
    }
    
    .catch-find {
        background-image: url("<%= asset_path("img/catch_find.png") %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        width: 100%;
        min-height: 250px;
        top: 10px;
        bottom: 10px;
        position: relative;
    }
    
    .font-subpage-title {
        font-family: 'BRBA_B';
        color: black;
        font-size: 50px;
        top: 0px;
    }
    
    .catch-alarm {
        background-image: url("<%= asset_path("img/catch_alarm.png") %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        width: 100%;
        min-height: 250px;
        top: 70px;
        bottom: 10px;
        position: relative;
    }
    
    .download-collect-ending {
        display: flex;
        margin-top: 50px;
    }
    
    .section-sale {
        margin-bottom: 250px;
    }
    
    .catch-hand-right {
        background-image: url("<%= asset_path('img/catch_hand_left.png') %>");
        background-repeat: no-repeat;
        background-size: 100% 100%;
        min-width: 50px;
        height: 50%;
        left: 350px;
        top: 80px;
        position: absolute;
        z-index: 100;
    }
}

@media only screen and (min-width: 1251px) {
    .button-size {
        width: 250px;
        height: 70px;
    }
    
    .main-smartphone {
        width: 100%;
        height: auto;
    }
    
    .font-main {
        font-family: 'nexon_lv1_gothic';
        color: black;
        font-size: 50px;
    }
    
    <% for i in 1..3 %>
    .sale-text-<%=i%> {
        position: absolute;
        right: <%= 400 - (800*0.1*i) %>px;
        bottom: <%= 400 + (600*0.1*i) %>px;
        font-size: <%= 30 + (100*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
    }
    <% end %>
    
    <% for i in 1..3 %>
    .alarm-text-<%=i%> {
        position: relative;
        left: <%= 250 + (200*0.1*i) %>px;
        top: <%= 150 - (100*0.1*i) %>px;
        font-size: <%= 15 + (30*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
    }
    <% end %>
    
    .catch-hand-sale {
        background-image: url("<%= asset_path('img/catch_hand_sale.png') %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: right bottom;
        width: 800px;
        height: 700px;
        position: absolute;
        bottom: 0px;
        right: 0px;
    }
    
    .catch-find {
        background-image: url("<%= asset_path('img/catch_find.png') %>");
        background-size: contain;
        background-repeat: no-repeat;
        width: 800px;
        height: 700px;
    }
    
    .catch-alarm {
        background-image: url("<%= asset_path("img/catch_alarm.png") %>");
        background-size: contain;
        background-repeat: no-repeat;
        width: 800px;
        height: 500px;
    }
    
    .font-subpage-title {
        font-family: 'BRBA_B';
        color: black;
        font-size: 60px;
        top: 0px;
    }
    
    .download-collect-ending {
        display: flex;
        margin-top: 50px;
    }
    
    .catch-hand-left {
        background-image: url("<%= asset_path('img/catch_hand_right.png') %>");
        background-repeat: no-repeat;
        background-size: 100% 100%;
        min-width: 100px;
        height: 50%;
        left: -50px;
        top: 90px;
        position: absolute;
        z-index: 100;
    }
}

