.section_main {
    background-image: url('<%= asset_path('bg/bg_gray.png') %>');
    background-repeat: no-repeat;
}

.main_line {
    margin-top: 450px;
    position: absolute;
}

.link_gray {
    color: #676767;
    text-decoration: none;
}

.font-typed {
    color: #FF4848;
    font-family: 'nexon_lv1_gothic';
    font-weight: bold;
}

.font-subpage-subtitle {
    font-family: 'Nanum Gothic';
    margin-top: 50px;
}

.weight_black {
    font-weight: bold;
    color: black;
}

.space-left {
    margin-left: 20px;
}

@media only screen and (max-width: 1250px) {
    .button-size {
        width: 170px;
        height: 50px;
    }
    
    .main-phone {
        width: 250px;
        margin-top: 50px;
        z-index: 100;
    }
    
    .text-center-mobile {
        text-align: center;
    }
    
    .justify-center-mobile {
        justify-content: center;
    }
    
    .font-main {
        font-family: 'nexon_lv1_gothic';
        color: black;
        font-size: 30px;
    }
    
    <% for i in 1..3 %>
    .sale-text-<%=i%> {
        position: absolute;
        left: <%= 100 + (300*0.1*i) %>px;
        bottom: <%= 200 + (300*0.1*i) %>px;
        font-size: <%= 10 + (50*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
        z-index: 100;
    }
    <% end %>
    
    <% for i in 1..3 %>
    .alarm-text-<%=i%> {
        position: absolute;
        left: <%= 220 + (200*0.1*i) %>px;
        bottom: <%= 80 + (250*0.1*i) %>px;
        font-size: <%= 10 + (30*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
    }
    <% end %>
    
    .catch-hand-sale {
        background-image: url("<%= asset_path('img/catch_hand_sale.png') %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: right bottom;
        width: 100%;
        min-height: 350px;
        position: fixed;
    }
    
    .catch-find {
        background-image: url("<%= asset_path("img/catch_find.png") %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        width: 100%;
        min-height: 250px;
        top: 10px;
        bottom: 10px;
        position: relative;
    }
    
    .font-subpage-title {
        font-family: 'BRBA_B';
        color: black;
        font-size: 50px;
        top: 0px;
    }
    
    .catch-alarm {
        background-image: url("<%= asset_path("img/catch_alarm.png") %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        width: 100%;
        min-height: 180px;
        top: 10px;
        bottom: 10px;
        position: relative;
    }
}

@media only screen and (min-width: 1251px) {
    .button-size {
        width: 250px;
        height: 70px;
    }
    
    .main-phone {
        width: 750px;
        margin-top: -250px;
        margin-left: -80px;
        position: absolute;
        z-index: 100;
    }
    
    .font-main {
        font-family: 'nexon_lv1_gothic';
        color: black;
        font-size: 50px;
    }
    
    <% for i in 1..3 %>
    .sale-text-<%=i%> {
        position: absolute;
        right: <%= 400 - (800*0.1*i) %>px;
        bottom: <%= 400 + (600*0.1*i) %>px;
        font-size: <%= 30 + (100*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
    }
    <% end %>
    
    <% for i in 1..3 %>
    .alarm-text-<%=i%> {
        position: relative;
        left: <%= 250 + (200*0.1*i) %>px;
        top: <%= 200 - (100*0.1*i) %>px;
        font-size: <%= 15 + (30*0.1*i) %>px;
        color: rgb(255, <%= 100 - i*33 %>, <%= 100 - i*33 %>);
    }
    <% end %>
    
    .catch-hand-sale {
        background-image: url("<%= asset_path('img/catch_hand_sale.png') %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: 100% 100%;
        width: 800px;
        height: 700px;
        z-index: -1;
        right: 0;
        bottom: 0;
        position: absolute;
    }
    
    .catch-find {
        background-image: url("<%= asset_path('img/catch_find.png') %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: 100% 100%;
        width: 800px;
        height: 700px;
        right: 5%;
        bottom: 200px;
        position: absolute;
    }
    
    .catch-alarm {
        background-image: url("<%= asset_path("img/catch_alarm.png") %>");
        background-size: contain;
        background-repeat: no-repeat;
        background-position: 100% 100%;
        width: 800px;
        height: 700px;
        right: 5%;
        bottom: 200px;
        position: absolute;
    }
    
    .font-subpage-title {
        font-family: 'BRBA_B';
        color: black;
        font-size: 60px;
        top: 0px;
    }
}

